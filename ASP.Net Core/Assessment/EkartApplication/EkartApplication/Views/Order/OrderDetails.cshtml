@model EkartApplication.Models.Order
@{
    ViewData["Title"] = "OrderDetails";
}

<h1>OrderDetails</h1>



<p>Order ID: @Model.OrderId</p>

<table class="table">
    <thead>
        <tr>
            <th>Order ID:<</th>
            <th>Product:</th>
            <th>Quantity:</th>
            <th>Unit Price:</th>
            <th>Total:</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.OrderDetails)
        {
            <tr>
                <td>@item.Order.OrderId</td>
                <td>@item.Product.ProductName</td>
                <td>@item.Quantity</td>
                <td>@item.UnitPrice.ToString("C")</td>
                <td>@(item.Quantity * item.UnitPrice).ToString("C")</td>
            </tr>
        }
    </tbody>
</table>
